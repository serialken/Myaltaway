<!-- Fixed navbar -->

<nav class="navbar navbar-inverse navbar-fixed-top">
    <div  id="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('altaway_page_homepage') }}">
                <img class="logo_home" alt="Altaway" src="{{ asset("/bundles/AltawayPage/img/altaway_logo.png") }}">
            </a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li class="dropdown {% if route == "altaway_page_homepage" %}active{% endif %}">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ 'homepage' | trans }} <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="{{ path('altaway_page_homepage') }}#{{ 'homepage' | trans }}">
                                <span>{{ 'homepage' | trans }}</span>
                            </a>
                        </li>
                        {% for page in list_pages %}
                            <li>
                                <a href="{{ path('altaway_page_homepage') }}#{{ page.slug }}">
                                    <span>{{ page.title }}</span>
                                </a>
                            </li>
                        {% endfor %}
                        <li>
                            <a href="{{ path('altaway_page_homepage') }}#Contact">
                                <span>{{ 'contact' | trans }}</span>
                            </a>
                        </li>
                    </ul>
                </li>
                <li class="{% if route starts with "altaway_offer" %}active{% endif %}">
                    <a href="{{ path('altaway_offer_homepage') }}">{{ 'list_offer' | trans }}</a>
                </li>
                <li class="{% if route == "fos_user_profile_show" %}active{% endif %}">
                    <a href="{{ path('fos_user_profile_show') }}">{{ 'profile' | trans }}</a>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <li>
                        <p class="navbar-text navbar-right">
                            Vous êtes connecté en tant que <a class="navbar-link" href="{{ path('fos_user_profile_edit') }}">{{ app.user.username }}</a>
                        </p>
                    </li>
                    <li>
                        <a href="{{ path('fos_user_security_logout') }}">
                            {{ 'layout.logout' | trans({}, 'FOSUserBundle') }}
                        </a>
                    </li>
                {% else %}
                    <li>
                        <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login' | trans({}, 'FOSUserBundle')  }}</a>
                    </li>
                    <li>
                        <a href="{{ path('fos_user_registration_register') }}">{{ "layout.register" | trans({}, 'FOSUserBundle') }}</a>
                    </li>
                {% endif %}
            </ul>
        </div><!--/.nav-collapse -->
    </div>
