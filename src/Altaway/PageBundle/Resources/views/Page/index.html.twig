{% extends "::layout.html.twig" %}

{% block title %}Altaway{% endblock %}


{% block content %}
    <div class="row" id="Accueil">
        <div id="carouselHome" class="carousel slide">
            <div class="carousel-inner">
                <div class="item active img-full">
                    <img src="{{ asset("bundles/altawaypage/images/home01.jpg") }}" alt="">
                    <div class="container">
                        <div class="carousel-caption">
                            <h1>Altaway, c'est vraiment bien.</h1>
                        </div>
                    </div>
                </div>
                <div class="item img-full">
                    <img src="{{ asset("bundles/altawaypage/images/home02.jpg") }}" alt="">
                    <div class="container">
                        <div class="carousel-caption">
                            <h1>Promis.</h1>
                        </div>
                    </div>
                </div>
                <div class="item img-full">
                    <img src="{{ asset("bundles/altawaypage/images/home03.jpg") }}" alt="">
                    <div class="container">
                        <div class="carousel-caption">
                            <h1>On a mÃªme un mec avec une cravate!</h1>
                        </div>
                    </div>
                </div>
            </div>
            <a class="left carousel-control" href="#carouselHome" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#carouselHome" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <div class="offer_link col-xs-offset-10">
            <a href="{{ path('altaway_page_homepage') }}#Offres" class="btn btn-primary btn-lg">
                <span>{{ 'show_offers' | trans }}</span>
            </a>
        </div>
    </div>
    {% for page in list_pages %}
        <div class="row page" id="{{ page.slug }}">
                <div class="col-xs-offset-1 col-xs-11">
                    <h1 class="orange">{{ page.title | upper }}</h1>
                </div>
                <div class="col-xs-3 img-full">
                    <img src="{{ asset("bundles/altawaypage/images/arrow.png") }}" alt="arrow" />
                </div>
                <div class="col-xs-9 subTitle">
                    {{ page.subtitle | upper }}
                </div>
                {% if page.title == "Offres" %}
                    {{ render(controller("AltawayOfferBundle:Offer:slider")) }}
                    <div class="col-xs-12 center">
                        <br>
                        <a class="btn btn-primary  btn-lg" href="{{ path('altaway_offer_homepage') }}">{{ 'show_list_offers' | trans }}</a>
                    </div>
                {% else %}
                    <div class="pagecontent col-xs-offset-1 col-xs-10">
                        {{ page.body | raw }}
                    </div>
                {% endif %}

        </div>
    {% endfor %}

    <div class="row contact" id="Contact">
        <div class="col-xs-4 map">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2623.2477506136443!2d2.2471555999999997!3d48.891615400000006!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e6650f6e4174c1%3A0x7dd374827e0fb1f4!2s22+Place+des+Vosges%2C+92400+Courbevoie!5e0!3m2!1sen!2sfr!4v1439906433847" width="100%" height="100%" frameborder="0" style="border:0" allowfullscreen></iframe>
        </div>
        <div class="col-xs-4">
            {{ informations.name | raw }}
            {{ informations.address }} <br>
            {{ informations.zip_code }}
        </div>
        <div class="col-xs-4">
            <b>{{ 'contact_us' | trans }}</b>
            <br>
            {{ 'intership' | trans }} :
            <br>
            <a href="{{ "mailto:" ~ informations.email.contact }}">{{ informations.email.contact }}</a> <br>
            {{ 'candidate' | trans }} : <br>
            <a href="{{ "mailto:" ~ informations.email.recrutment }}">{{ informations.email.recrutment }}</a>
        </div>
    </div>


{% endblock %}
